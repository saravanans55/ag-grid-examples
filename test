const inputDate = new Date('2024-04-17'); // Example date

// Get the current date
const currentDate = new Date();

// Check if the input date is not earlier than the current date and not a future date
if (inputDate >= currentDate && inputDate <= new Date()) {
    console.log("The input date is valid.");
} else {
    console.log("The input date must not be earlier than the current date or a future date.");
}
