import { Component, OnInit } from '@angular/core';

@Component({
  selector: 'app-my-component',
  template: `<div>{{ message }}</div>`
})
export class MyComponent implements OnInit {
  dynamicField: string = 'inception_date';
  columnDefs: { field: string, hide: boolean }[] = [
    { field: 'inception_date', hide: false },
    { field: 'aa_date2', hide: true },
    { field: 'bb_date3', hide: true },
    { field: 'cc_date4', hide: true }
  ];
  message: string = '';

  ngOnInit() {
    const isHidden = this.isFieldHidden(this.columnDefs, this.dynamicField);
    this.message = `Is the field '${this.dynamicField}' hidden? ${isHidden}`;
  }

  isFieldHidden(columnDefs: { field: string, hide: boolean }[], field: string): boolean {
    const columnDef = columnDefs.find(col => col.field === field);
    return columnDef ? columnDef.hide : false;
  }
}
