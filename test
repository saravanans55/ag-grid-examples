const updatedRowData = rowData.map(item => {
  const newItem = { ...item }; // Create a copy of the existing object
  
  if (item.riskList && item.riskList.length > 0) {
    const riskListItem = item.riskList[0];
    newItem.riskIndustryTypeId = riskListItem.riskIndustryTypeId;
    newItem.field1 = riskListItem.field1;
    newItem.field2 = riskListItem.field2;
    // ... add other fields from riskListItem
  } else {
    newItem.riskIndustryTypeId = null;
    newItem.field1 = null;
    newItem.field2 = null;
    // ... set other fields to null or default values
  }

  return newItem;
});
