allowNumbersOnly(event: KeyboardEvent, allowNegative: boolean = false): void {
  // Get the key code of the pressed key
  const keyCode = event.keyCode || event.which;

  // Get the current value of the input field
  const inputValue = (event.target as HTMLInputElement).value;

  // Check if negative numbers are allowed and if the negative sign (-) is the first character
  const isFirstCharacterNegative = allowNegative && inputValue.length === 0 && keyCode === 45;

  // Allow numbers (0-9) and control keys, and negative sign (-) if it is the first character and negative numbers are allowed
  if (
    !(keyCode >= 48 && keyCode <= 57) && // Check for numbers 0-9
    !isFirstCharacterNegative && // Check if the negative sign is the first character
    ![8, 9, 13, 27, 37, 39].includes(keyCode) // Allow control keys
  ) {
    event.preventDefault();
  }
}
