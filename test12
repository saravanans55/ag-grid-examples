function formatLargeNumber(number: number): string {
    // Convert number to string and check if it's in scientific notation
    const numberString = number.toString();
    if (numberString.includes('e')) {
        const [mantissa, exponent] = numberString.split('e');
        // Convert the mantissa and exponent to numbers
        const parsedMantissa = parseFloat(mantissa);
        const parsedExponent = parseInt(exponent, 10);
        // Multiply mantissa by 10 raised to the power of exponent
        const formattedNumber = parsedMantissa * Math.pow(10, parsedExponent);
        // Return the formatted number as string
        return formattedNumber.toString();
    }
    // If the number is not in scientific notation, return it as is
    return numberString;
}
