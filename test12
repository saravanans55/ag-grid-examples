const getNestedProperty = (obj, propertyPath) => {
  const properties = propertyPath.split('.');

  if (!obj || properties.length === 0) {
    return undefined;
  }

  const currentProperty = properties.shift();

  if (obj.hasOwnProperty(currentProperty)) {
    return properties.length === 0
      ? obj[currentProperty]
      : getNestedProperty(obj[currentProperty], properties.join('.'));
  } else {
    return undefined;
  }
};
