import { Injectable } from '@angular/core';

@Injectable({
  providedIn: 'root'
})
export class DataService {
  inputData = {
    "foods": {
      "fruits": ["apple", "orange", "grapes"],
      "vegetables": ["tomato", "brinjal", "potato"]
    },
    "vehicles": {
      "cars": ["hatchpack", "suv", "mini suv"],
      "bikes": ["scooter", "gear bike", "electric bike"]
    }
  };

  findCategory(input: string): string {
    const category = Object.keys(this.inputData).find(category =>
      Object.values(this.inputData[category]).some(subCategory => subCategory.includes(input))
    );

    if (category) {
      const subCategory = Object.keys(this.inputData[category]).find(subCategory =>
        this.inputData[category][subCategory].includes(input)
      );
      return subCategory;
    } else {
      return "Category not found";
    }
  }
}
