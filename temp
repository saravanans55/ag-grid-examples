
import { Pipe, PipeTransform } from '@angular/core';

@Pipe({
  name: 'customNumberFormatter'
})
export class CustomNumberFormatterPipe implements PipeTransform {

  transform(value: any): any {
    if (value !== null) {
      value = typeof value === 'string' && value.includes(',') ? this.removeComma(value) : parseFloat(value);
      const formattedValue = String(Math.round(value)).split('.')[0];
      const res = formattedValue.replace(/\B(?=(\d{3})+(?!\d))/g, ',');
      return res === 'NaN' ? '' : res;
    }
    return value;
  }

  private removeComma(value: string): number {
    return parseFloat(value.replace(/,/g, ''));
  }
}
